{
    "compilerOptions": {
      // this aligns with Vue's browser support
      "target": "es5",
      // this enables stricter inference for data properties on `this`
      "strict": true,
      // if using webpack 2+ or rollup, to leverage tree shaking:
      "module": "es2015",
      "moduleResolution": "node",
      "allowJs": true,
      "lib": [
        "es2015", "dom"
      ],
      "types": [
        "vue"
      ],
      "baseUrl": ".",
      "paths": {
        "@mixins/*": ["./src/mixins/*"],
        "@packages/*": ["./packages/*"],
        "@hoc/*": ["./src/hoc/*"]
      }
    },
    "include": [
      "./src/**/*" ,
      "./packages/**/*"  
    ],
  }